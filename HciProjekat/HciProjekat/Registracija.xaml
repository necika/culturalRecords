        <PasswordBox FontSize="20" HorizontalAlignment="Left" Height="33" Margin="10,153,0,0"  Name="txtLozinka"  VerticalAlignment="Top" Width="237"/>
        <Button Content="Registruj se" HorizontalAlignment="Left" Height="38" Margin="106,211,0,0" VerticalAlignment="Top" Width="156" Click="Button_Click"/>
        <Image Name ="myImage2" HorizontalAlignment="Left" Height="57" Margin="280,103,0,0" VerticalAlignment="Top" Width="79"/>
        <TextBlock HorizontalAlignment="Left" Height="19" Name="txtUspesno" Margin="271,176,0,0" TextWrapping="Wrap" Foreground="Green" Text="" VerticalAlignment="Top" Width="111"/>
        <TextBlock HorizontalAlignment="Left" FontWeight="Black" Height="22" Margin="311,0,0,0" TextWrapping="Wrap" Text="Ulogujte se" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" VerticalAlignment="Top" Width="71"/>
    </Grid>
</Window>
