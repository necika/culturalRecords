        mc:Ignorable="d"
        Title="Registracija" Height="300" Width="400" Background="BlanchedAlmond">
    <Grid>
        <TextBlock FontSize="20" FontWeight="Black" HorizontalAlignment="Left" Height="29" Margin="10,23,0,0" TextWrapping="Wrap" Text="Ime" VerticalAlignment="Top" Width="211"/>
        <TextBox FontSize="20" HorizontalAlignment="Left" Height="33" Margin="9,66,0,0" TextWrapping="Wrap" Name="txtIme" Text="" VerticalAlignment="Top" Width="238"/>
